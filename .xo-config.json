{
    "space": 4,
    "semicolon": true,
    "globals": [
        "__DIR__",
        "document",
        "location",
        "Window",
        "Element",
        "Audio",
        "Clipboard",
        "fetch",
        "post",
        "printf",
        "scanf",
        "JSX",
        "getComputedStyle",
        "requestAnimationFrame",
        "cancelAnimationFrame",
        "devicePixelRatio"
    ],
    "plugin": [
        "html"
    ],
    "extension": [
        "htm",
        "html"
    ],
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "capitalized-comments": "off",
        "curly": [
            "error",
            "multi-or-nest"
        ],
        "no-bitwise": "warn",
        "no-global-assign": "warn",
        "no-new": "warn",
        "prefer-arrow-callback": "off",
        "quotes": [
            "error",
            "double"
        ],
        "space-before-function-paren": "off",
        "spaced-comment": "off",
        "unicorn/prevent-abbreviations": "off"
    }
}
